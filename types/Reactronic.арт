используется артель

внешние
{
  тип Reactronic = объект
  {
    общая операция why(brief: Булево? = пусто): Текст
    общая операция getController<T>(method: F<T>): Controller<T>
    общая операция pullLastResult<T>(method: F<Promise<T>>, args: Массив<Нечто>? = пусто): T?
    общая операция configureCurrentMethod(options: Partial<MemberOptions>): MemberOptions
    общая операция takeSnapshot<T>(obj: T): T
    общая операция dispose(obj: Нечто): Ничего
    общее reactionsAutoStartDisabled: Булево
    общее защищённое isTraceEnabled: Булево
    общее защищённое traceOptions: TraceOptions
    общая операция setTraceMode(enabled: Булево, options: TraceOptions? = пусто): Ничего
    общая операция setTraceHint<T: Object>(obj: T, name: Текст?): Ничего
    общая операция getTraceHint<T: Object>(obj: T, full: Булево? = пусто): Текст?
    общая операция setProfilingMode(enabled: Булево, options: Partial<ProfilingOptions>? = пусто): Ничего
  }

  операция nonreactive_<T>(func: F<T>, args: Массив<Нечто>): T
  операция standalone<T>(func: F<T>, args: Массив<Нечто>): T
  операция sensitive<T>(sensitivity: Sensitivity, func: F<T>, args: Массив<Нечто>): T
  операция unobservable(proto: Object, prop: PropertyKey): Нечто
  операция transaction_(proto: Object, prop: PropertyKey, pd: PropertyDescriptor): Нечто
  операция reaction(proto: Object, prop: PropertyKey, pd: PropertyDescriptor): Нечто
  операция cached(proto: Object, prop: PropertyKey, pd: PropertyDescriptor): Нечто
  операция priority(value: Число): F<Нечто>
  операция noSideEffects(value: Булево): F<Нечто>
  операция observableArgs(value: Булево): F<Нечто>
  операция throttling(milliseconds: Число): F<Нечто>
  операция reentrance(value: Reentrance): F<Нечто>
  операция journal(value: TransactionJournal?): F<Нечто>
  операция monitor(value: Monitor?): F<Нечто>
  операция trace(value: Partial<TraceOptions>): F<Нечто>
}
