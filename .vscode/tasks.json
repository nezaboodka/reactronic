{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build All  -  tsc & eslint",
      "type": "shell",
      "command": "npm run build",
      "problemMatcher": ["$tsc", "$eslint-stylish"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "Test All  -  ava",
      "type": "shell",
      "command": "npm run test",
      "isBackground": true,
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "Show Coverage  -  c8 & ava",
      "type": "shell",
      "command": "npm run cover",
      "isBackground": true,
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "Install Modules  -  npm",
      "type": "shell",
      "command": "npm install",
      "isBackground": true,
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "Fix Rules  -  eslint",
      "type": "shell",
      "command": "npm run fix",
      "problemMatcher": ["$tsc", "$eslint-stylish"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    }
  ]
}
